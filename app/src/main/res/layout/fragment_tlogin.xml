<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TLoginFragment">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/login_wallpaper">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Teacher's Login"
                android:fontFamily="serif-monospace"
                android:textColor="@color/white"
                android:textSize="30dp"
                android:textAlignment="center"
                android:layout_marginTop="100dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="250dp"
                android:background="@drawable/rectangle2"
                android:paddingLeft="10dp"
                android:hint="Email"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:inputType="text"
                android:id="@+id/temail"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/rectangle2"
                android:layout_below="@+id/temail"
                android:padding="10dp"
                android:hint="Password"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:id="@+id/tpassword"
                android:inputType="textPassword"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rectangle4"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/tpassword"
                android:foregroundTint="@color/green1"
                android:text="Log In"
                android:id="@+id/t_login_button"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Register Here"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:padding="10dp"
                android:background="@drawable/rectangle4"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="300dp"
                android:id="@+id/reg_link_button" />
        </RelativeLayout>
</FrameLayout>