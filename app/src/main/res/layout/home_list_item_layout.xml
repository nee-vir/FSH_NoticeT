<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/home_item_layout"
    android:background="@drawable/rounded_rectangle3"
    android:layout_margin="10dp"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@color/lighterpink"
        android:text="Title"
        android:textColor="@color/kindblue"
        android:textSize="20dp"
        android:id="@+id/some_title"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/some_title"
        android:text="Department"
        android:textSize="20dp"
        android:layout_margin="5dp"
        android:id="@+id/some_dept"
        android:background="@color/green1"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/some_dept"
        android:text="Published By:"
        android:background="@color/blue1"
        android:layout_margin="5dp"
        android:id="@+id/published"
        android:textSize="20dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:textSize="20dp"
        android:layout_below="@+id/some_dept"
        android:layout_toRightOf="@+id/published"
        android:text="Publisher"
        android:textColor="@color/kindblue"
        android:textStyle="italic"
        android:id="@+id/some_publisher"
        android:background="@color/white"/>
    <!--<view
        android:layout_width="match_parent"
        android:layout_height="2dp" /// Does not work inside RecyclerView
        android:layout_below="@+id/some_title"
        android:background="@color/white"
        android:id="@+id/line_d"/>-->

</RelativeLayout>